<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" 
    >

    <Button
        android:id="@+id/decrementPerMeetingWager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialogCreateWagerButton"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="51dp"
        android:layout_marginLeft="24dp"
        android:text="-" />

    <Button
        android:id="@+id/incrementPerMeetingWager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialogCreateWagerButton"
        android:layout_alignBaseline="@+id/decrementPerMeetingWager"
        android:layout_alignBottom="@+id/decrementPerMeetingWager"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:text="+" />

    <Button
        android:id="@+id/dialogCreateWagerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="103dp"
        android:text="Create a Wager" />

    <TextView
        android:id="@+id/DisplayCurrentWagerPerClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/decrementPerMeetingWager"
        android:layout_centerHorizontal="true"
        android:text="10"
        >
        
    </TextView>


    <EditText
        android:id="@+id/CurrentWagerSessionStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_above="@+id/decrementPerMeetingWager"
        android:layout_marginBottom="35dp"
        android:layout_toLeftOf="@+id/DisplayCurrentWagerPerClass"
        android:ems="5"
        android:inputType="date"
        android:text="2/17/14" />

    <EditText
        android:id="@+id/CurrentWagerSessionEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/CurrentWagerSessionStartDate"
        android:layout_alignBottom="@+id/CurrentWagerSessionStartDate"
        android:layout_toRightOf="@+id/DisplayCurrentWagerPerClass"
        android:ems="5"
        android:inputType="date"
        android:text="2/22/14" />

	<TextView 
	    android:id="@+id/WagerdialogCurrentSessionTitle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/CurrentWagerSessionStartDate"
	    android:layout_centerHorizontal="true"
		android:text="Session Dates:"
		android:textSize="20dp"	    
	    />    
    
    
</RelativeLayout>
