<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF454545" 
    android:orientation="vertical"
    >
    
 <TextView
        android:id="@+id/userWager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User&apos;s Wagers"
        android:textColor="#FFFFFF"
        android:textSize="25sp"></TextView>
    
    
    <ExpandableListView
        android:id="@+id/wager_lvExp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        /> 
        
        <Button
            android:id="@+id/editWagerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit a Wager"
            android:layout_gravity="center_vertical"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
             />     
    
    <Button
            android:id="@+id/addWagerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a Wager"
            android:layout_gravity="center_vertical"

            android:textSize="30dp"
			android:textColor="#FFFFFF"            
             />     

</LinearLayout>
