<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lectureloot.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <supports-screens android:largestWidthLimitDp="320" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.lectureloot.android.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lectureloot.android.SplashActivity"
            android:label="@string/title_activity_splash" >
        </activity>
        <activity
            android:name="com.lectureloot.android.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.lectureloot.android.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.lectureloot.android.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
         <activity
            android:name="com.lectureloot.android.AccountSettingsActivity"
            android:label="@string/title_activity_account_settings" >
        </activity>
        <activity
            android:name="com.lectureloot.android.PaymentInformationActivity"
            android:label="@string/title_activity_payment_information" >
        </activity>
        <activity
            android:name="com.lectureloot.android.NotificationsSettingsActivity"
            android:label="@string/title_activity_notifications_settings" >
        </activity>
        <activity
            android:name="com.lectureloot.android.TutorialActivity"
            android:label="@string/title_activity_tutorial" >
        </activity>
        <activity
            android:name="com.lectureloot.android.FAQActivity"
            android:label="@string/title_activity_FAQ" >
        </activity>
        <activity
            android:name="com.lectureloot.android.ReportIssueActivity"
            android:label="@string/title_activity_report_issue" >
        </activity>
        <activity
            android:name="com.lectureloot.android.TermsOfServiceActivity"
            android:label="@string/title_activity_terms_of_service" >
        </activity>
    </application>

</manifest>
